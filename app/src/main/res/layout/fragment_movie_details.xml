<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/fragment_movie_poster"
        android:layout_width="103dp"
        android:layout_height="136dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/space3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emptyposter" />

    <TextView
        android:id="@+id/fragment_movie_details_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:lines="3"
        android:text="title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/fragment_movie_poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_movie_poster"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_movie_poster"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/fragment_movie_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_to_favourities"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/fragment_movie_overview"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_movie_overview" />

    <Space
        android:id="@+id/space3"
        android:layout_width="284dp"
        android:layout_height="1dp"
        tools:layout_editor_absoluteY="173dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_movie_poster"
        app:layout_constraintRight_toRightOf="@+id/fragment_movie_details_title"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/fragment_movie_overview"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:lines="4"
        android:maxLines="12"
        android:scrollbars = "vertical"
        android:text="overview"
        android:textAlignment="viewStart"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/space3"
        app:layout_constraintTop_toBottomOf="@+id/space3"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="@+id/space3"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_movie_add_button" />


</android.support.constraint.ConstraintLayout>